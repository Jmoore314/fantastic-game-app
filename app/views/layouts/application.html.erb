<!DOCTYPE html>
<html>
<head>
  <title>FantasticGameApp</title>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application", media: "all" %>
</head>
<body>
<header>
  <ul id="nav">
    <li class="title"><%= link_to 'FANTASTIC GAMES', games_path %> </li>
    <% if !logged_in? %>
      <li><%= link_to "Register", new_user_path %></li>
      <li><%= link_to "log in", new_session_path %></li>
    <% else %>
      <li><%= link_to "Welcome " + current_user.username, current_user %></li>
      <li><%= link_to "log out", "/logout", method: :delete %></li>
    <% end %>
  </ul>
</header>

<main>
<%= yield %>
</main>

</body>
</html>
